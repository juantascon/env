super + {Left,Right,space}
  playerctl -a {previous,next,play-pause}; noti.sh playerctl

XF86AudioPlay
  playerctl -a play-pause; noti.sh playerctl

XF86Audio{RaiseVolume,LowerVolume,Mute}
  pulsemixer {--change-volume +2,--change-volume -2,--toggle-mute}; noti.sh volume

XF86KbdBrightness{Down,Up}
  brillo -{U,A} 2; noti.sh brightness

XF86MonBrightness{Down,Up}
  brillo -{U,A} 1; noti.sh brightness

super + t
  xterm

super + l
  i3lock

super + p
  tabpass.sh

super + v
  clipmenu

super + s
  flameshot gui

super + x
  autorandr -c

super + m
  btp.sh menu; noti.sh profile
