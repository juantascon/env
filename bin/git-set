#! /usr/bin/env bash

case "$1" in
  "hx"|"horlux")
    git config user.name juantascon
    git config user.email juantascon@horlux.org ;;
  "gn"|"geenee")
    git config user.name juantascon
    git config user.email juan.tascon@geenee.me;;
  *)
    echo "invalid option, use any of: pr|hx|gn"
esac
