set $win Mod4
set $alt Mod1

set $slack [class="Slack"]
set $whatsapp [class="whats-app-nativefier-.*"]
set $termite [class="Termite"]

floating_modifier $win
hide_edge_borders both
font pango:DejaVu Sans Mono 8

bindsym $win+Shift+r reload
bindsym $win+c kill
bindsym $win+space floating toggle

bindsym $alt+F1 workspace 1
bindsym $alt+F2 workspace 2
bindsym $alt+F3 workspace 3
bindsym $alt+F4 workspace 4

bindsym $win+F1 move container to workspace 1
bindsym $win+F2 move container to workspace 2
bindsym $win+F3 move container to workspace 3
bindsym $win+F4 move container to workspace 4

for_window [class="pop-up"] floating enable
for_window [class="^.*"] border pixel 0

bindsym F12 $slack move to scratchpad, $whatsapp move to scratchpad, $termite scratchpad show
for_window $termite move to scratchpad, move position 0px 0px, resize set width 1920px height 1080px

#bindsym Print $slack move to scratchpad, $termite move to scratchpad, $whatsapp scratchpad show
#for_window $whatsapp move to scratchpad, move position 0px 0px, resize set width 1400px height 1080px

#bindsym Scroll_Lock $whatsapp move to scratchpad, $termite move to scratchpad, $slack scratchpad show
#for_window $slack move to scratchpad, move position 0px 0px, resize set width 1400px height 1080px
