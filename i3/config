# i3 config file (v4)

set $win Mod4
set $alt Mod1

floating_modifier $win
hide_edge_borders both
font pango:DejaVu Sans Mono 8

bindsym $win+c kill

bindsym $win+f fullscreen

bindsym $win+Shift+space floating toggle
bindsym $win+space focus mode_toggle

bindsym $alt+F1 workspace 1
bindsym $alt+F2 workspace 2
bindsym $alt+F3 workspace 3
bindsym $alt+F4 workspace 4

# move focused container to workspace
bindsym $win+F1 move container to workspace 1
bindsym $win+F2 move container to workspace 2
bindsym $win+F3 move container to workspace 3
bindsym $win+F4 move container to workspace 4
bindsym $win+F5 move container to workspace 5

bindsym $win+Shift+r reload
bindsym $win+Shift+e exec "i3-nagbar -t warning -m 'Exit?' -b 'Yes' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $win+r mode "resize"
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

for_window [class="pop-up"] floating enable

#for_window [class="spotify"] floating enable
for_window [window_role="browser"] border none
for_window [class="Subl3"] border none
for_window [instance="urxvt_kuake"] border none, floating enable, fullscreen

