super + {Left,Right,space}
  playerctl -a {previous,next,play-pause}; noti.sh playerctl

XF86AudioPlay
  playerctl -a play-pause; noti.sh playerctl

XF86Audio{RaiseVolume,LowerVolume,Mute}
  ponymix {increase 3,decrease 3,toggle}; noti.sh volume

super + {Up,Down,0}
  ponymix {increase 3,decrease 3,toggle}; noti.sh volume

XF86KbdBrightness{Down,Up}
  brillo -{U,A} 2; noti.sh brightness

XF86MonBrightness{Down,Up}
  brillo -{U,A} 2; noti.sh brightness

super + {t,l,p,v,s,x}
  {xterm,i3lock,tabpass.sh,clipmenu,maim -s ~/shot.png,autorandr -c}

