control + super + {Up,Down,space,Left,Right}
  playerctl -a {next,previous,play-pause,position -5, position +5}

XF86Audio{RaiseVolume,LowerVolume,Mute}
  ponymix -N {increase 3,decrease 3,toggle}

super + {Up,Down,0}
  ponymix -N {increase 3,decrease 3,toggle}

XF86KbdBrightness{Down,Up}
  sudo brightnessctl set -q 2%{-,+} ; notify-send -h int:value:(brightnessctl info -m |cut -f 4 -d,) brightnessctl

XF86MonBrightness{Down,Up}
  sudo brightnessctl set -q 2%{-,+} ; notify-send -h int:value:(brightnessctl info -m |cut -f 4 -d,) brightnessctl

super + {t,l,p,s,x}
  {xterm,i3lock,tabpass.py,maim -s ~/shot.png,autorandr -c}

control + alt + v
  clipmenu
