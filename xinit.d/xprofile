#! /bin/bash

#
# autologin
#
i3lock &

#
# xorg
#
xrdb $HOME/env/xinit.d/xresources
xsetroot -solid "#000000" &
xset b 0 &
autorandr -c &
start-pulseaudio-x11 &
#synclient MinSpeed=0.8 MaxSpeed=4.0 &
#synclient TapButton1=-1 TapButton2=-1 TapButton3=-1 &

#
# desktop
#
supervise.sh sxhkd &
supervise.sh dunst &
supervise.sh alacritty -e tmux new-session -A -s main &
supervise.sh clipmenud &
supervise.sh cbatticon &

#
# user specific config
#
if [ -f ~/env/xinit.d/$USER.xprofile ]; then
  source ~/env/xinit.d/$USER.xprofile
fi
